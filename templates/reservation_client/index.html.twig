{% extends 'base.html.twig' %}

{% block title %}Mes réservations{% endblock %}

{% block body %}
<h1>Mes réservations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Service</th>
      <th>Date</th>
      <th>Statut</th>
    </tr>
  </thead>
  <tbody>
    {% for r in reservations %}
      <tr>
        <td>{{ r.service.titre }}</td>
        <td>{{ r.dateReservation|date('Y-m-d H:i') }}</td>
        <td>{{ r.statut }}</td>
      </tr>
    {% else %}
      <tr>
        <td colspan="3">Aucune réservation.</td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<a class="btn btn-primary" href="{{ path('client_services') }}">
  Retour aux services
</a>
{% endblock %}
