{% extends 'base_client.html.twig' %}
{% block title %}Vérification Gmail{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card p-4 shadow-sm border-0">
      <h2 class="text-center mb-2">Vérification Gmail</h2>
      <p class="text-muted text-center mb-4">
        Code envoyé à <b>{{ email }}</b>
      </p>

      <form method="post">
        <div class="mb-3">
          <label class="form-label">Code de vérification</label>
          <input type="text"
                 name="code"
                 maxlength="6"
                 class="form-control form-control-lg text-center"
                 placeholder="123456"
                 required>
        </div>

        <button class="btn btn-success btn-lg w-100">
          Vérifier
        </button>
      </form>

      <div class="text-center mt-3">
        <a href="{{ path('app_verify_code_resend') }}">Renvoyer un code</a>
      </div>

      <div class="text-center mt-2">
        <a href="{{ path('app_register') }}">Changer d'email</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
