{% extends 'base_client.html.twig' %}
{% block title %}Coach{% endblock %}

{% block body %}
<div class="row g-4 align-items-start">
  <div class="col-md-4">
    {% if coach.photo %}
      <img src="{{ asset('uploads/coachs/' ~ coach.photo) }}"
           class="w-100 rounded" style="height:300px; object-fit:cover;" alt="coach photo">
    {% endif %}
  </div>

  <div class="col-md-8">
    <h1 class="mb-1">{{ coach.nom }}</h1>
    <p class="text-muted">{{ coach.specialite }}</p>

    <div class="card p-3 mb-3">
      <div><b>Exp√©rience:</b> {{ coach.experience }}</div>
    </div>

    <p>{{ coach.biographie }}</p>

    <div class="d-flex gap-2">
      <a class="btn btn-outline-light" href="{{ path('client_coachs') }}">Retour</a>
      <a class="btn btn-primary" href="{{ path('client_services', {coach: coach.id}) }}">
        Voir ses services
      </a>
    </div>
  </div>
</div>
{% endblock %}
