<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Health Fitness{% endblock %}</title>

  {{ encore_entry_link_tags('app') }}
  {{ encore_entry_script_tags('app') }}
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="{{ path('client_services') }}">
      Health<span style="color:#22c55e;">Fitness</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navClient">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navClient">
      <ul class="navbar-nav me-auto gap-lg-2">
        <li class="nav-item"><a class="nav-link" href="{{ path('client_services') }}">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="{{ path('client_coachs') }}">Coachs</a></li>
        <li class="nav-item"><a class="nav-link" href="{{ path('client_products') }}">Produits</a></li>

        {% if app.user %}
          <li class="nav-item"><a class="nav-link" href="{{ path('client_reservations') }}">Mes réservations</a></li>
          <li class="nav-item"><a class="nav-link" href="{{ path('client_orders') }}">Mes commandes</a></li>
        {% endif %}
      </ul>

      <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
        {% if app.user %}
          <li class="nav-item">
            <span class="badge-soft">{{ app.user.email }}</span>
          </li>
          {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
              <a class="btn btn-sm btn-outline-light" href="{{ path('admin_dashboard') }}">Admin</a>
            </li>
          {% endif %}
          <li class="nav-item">
            <a class="btn btn-sm btn-outline-light" href="{{ path('app_logout') }}">Logout</a>
          </li>
        {% else %}
          <li class="nav-item"><a class="btn btn-sm btn-outline-light" href="{{ path('app_login') }}">Login</a></li>
          <li class="nav-item"><a class="btn btn-sm btn-primary" href="{{ path('app_register') }}">Register</a></li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>

<div class="container">

  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="alert alert-{{ label }} shadow-sm border-0">{{ message }}</div>
    {% endfor %}
  {% endfor %}

  {% block body %}{% endblock %}
</div>

<footer class="mt-5">
  Health Fitness © {{ "now"|date("Y") }} — All rights reserved.
</footer>

</body>
</html>
