{% extends 'base_client.html.twig' %}
{% block title %}R√©initialiser le mot de passe{% endblock %}

{% block body %}
<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card p-4">
      <h2 class="mb-2 text-center">R√©initialiser le mot de passe</h2>
      <p class="text-muted text-center mb-4">
        Code envoy√© √† <b>{{ email }}</b>
      </p>

      <form method="post">
        <div class="mb-3">
          <label class="form-label">Code de v√©rification</label>
          <input type="text" name="code" class="form-control form-control-lg"
                 maxlength="6" placeholder="ex: 123456" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Nouveau mot de passe</label>
          <div class="input-group">
            <input type="password" name="password" id="reset_password"
                   class="form-control form-control-lg" required>
            <button class="btn btn-outline-secondary toggle-password"
                    type="button" data-target="reset_password">üëÅ</button>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Confirmer mot de passe</label>
          <div class="input-group">
            <input type="password" name="password_confirm" id="reset_password_confirm"
                   class="form-control form-control-lg" required>
            <button class="btn btn-outline-secondary toggle-password"
                    type="button" data-target="reset_password_confirm">üëÅ</button>
          </div>
        </div>

        <button type="submit" class="btn btn-success btn-lg w-100">
          Mettre √† jour le mot de passe
        </button>

        <div class="text-center mt-3">
          <a href="{{ path('app_login') }}">Retour au login</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
document.querySelectorAll('.toggle-password').forEach(function(btn) {
  btn.addEventListener('click', function () {
    const targetId = this.getAttribute('data-target');
    const input = document.getElementById(targetId);
    if (!input) return;
    input.type = (input.type === 'password') ? 'text' : 'password';
  });
});
</script>
{% endblock %}
