{% extends 'base_client.html.twig' %}
{% block title %}Services{% endblock %}

{% block body %}

<div class="hf-hero mb-4">
  <h1 class="mb-1">Nos Services</h1>
  <p class="text-muted mb-0">Choisis ton programme et réserve en 1 clic.</p>
</div>

<div class="d-flex flex-wrap gap-2 mb-3">
  <a class="btn btn-outline-light btn-sm" href="{{ path('client_services') }}">Tous</a>
  <a class="btn btn-outline-light btn-sm" href="{{ path('client_services', {cat:'yoga'}) }}">Yoga</a>
  <a class="btn btn-outline-light btn-sm" href="{{ path('client_services', {cat:'cardio'}) }}">Cardio</a>
  <a class="btn btn-outline-light btn-sm" href="{{ path('client_services', {cat:'boxe'}) }}">Boxe</a>
</div>

<div class="mb-4">
  <select class="form-select w-auto" onchange="location = this.value;">
    <option value="{{ path('client_services') }}">-- Filtrer par coach --</option>
    {% for c in coachs %}
      <option value="{{ path('client_services', {coach: c.id}) }}"
        {{ selectedCoach == c.id ? 'selected' : '' }}>
        {{ c.nom }}
      </option>
    {% endfor %}
  </select>
</div>

<div class="row g-3">
  {% for s in services %}
    <div class="col-md-4">
      <div class="card p-2 h-100">
        {% if s.image %}
          <img src="{{ asset('uploads/services/' ~ s.image) }}" class="hf-img mb-2" alt="service image">
        {% endif %}

        <div class="p-2">
          <h5 class="mb-1">{{ s.titre }}</h5>
          <div class="small text-muted mb-2">{{ s.categorie }} • {{ s.duree }} min</div>
          <p class="mb-2">{{ s.description|slice(0,120) }}...</p>

          <div class="d-flex justify-content-between align-items-center">
            <div class="fw-bold">{{ s.prix }} DT</div>
            <a class="btn btn-primary btn-sm"
               href="{{ path('client_service_show', {id: s.id}) }}">
              Voir détail
            </a>
          </div>

          <div class="small text-muted mt-2">
            Coach: <b>{{ s.coach.nom }}</b>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <p>Aucun service trouvé.</p>
  {% endfor %}
</div>

{% endblock %}
