{% extends 'base_client.html.twig' %}
{% block title %}Mes réservations{% endblock %}

{% block body %}
<h1 class="mb-3">Mes réservations</h1>

<div class="card p-3">
  <table class="table table-striped align-middle mb-0">
    <thead>
      <tr>
        <th>Service</th>
        <th>Date</th>
        <th>Statut</th>
      </tr>
    </thead>
    <tbody>
      {% for r in reservations %}
        <tr>
          <td>{{ r.service.titre }}</td>
          <td>{{ r.dateReservation|date('Y-m-d H:i') }}</td>
          <td><span class="badge-soft">{{ r.statut ?? r.status }}</span></td>
        </tr>
      {% else %}
        <tr><td colspan="3">Aucune réservation.</td></tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<a class="btn btn-outline-light mt-3" href="{{ path('client_services') }}">
  Retour aux services
</a>
{% endblock %}
