{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1>Panier</h1>

{% if items is empty %}
  <p>Panier vide.</p>
  <a class="btn btn-primary" href="{{ path('client_products') }}">Retour Produits</a>
{% else %}
<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th>Produit</th>
      <th>Qte</th>
      <th>Total ligne</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {% for it in items %}
    <tr>
      <td>{{ it.product.nom }}</td>
      <td>{{ it.qty }}</td>
      <td>{{ it.lineTotal }} DT</td>
      <td>
        <a class="btn btn-sm btn-danger"
           href="{{ path('cart_remove', {id: it.product.id}) }}">
           X
        </a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>

<h3>Total: {{ total }} DT</h3>

<a class="btn btn-success" href="{{ path('cart_checkout') }}">
  Valider panier
</a>
<a class="btn btn-secondary ms-2" href="{{ path('client_products') }}">
  Continuer achats
</a>
{% endif %}
{% endblock %}
